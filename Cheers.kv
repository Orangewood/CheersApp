<PageLayout>:

    BoxLayout:
        canvas:
            Color:
                rgba: 216 / 255., 195 / 255., 88 / 255., 1
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: "vertical"

        Label:
            size_hint_y: None
            height: 1.5 * self.texture_size[1]
            text: 'page 1'


    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 109 / 255., 8 / 255., 57 / 255., 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'page 2'
