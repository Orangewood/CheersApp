#: import NavigationLayout kivymd.uix.navigationdrawer.NavigationLayout
#ContentNavigationDrawer@MDNavigationDrawer
NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer
        drawer_logo: "beer.mp4"
        NavigationDrawerSubheader:
            text:'Cheers'

        NavigationDrawerIconButton:
            icon: "glass-mug-variant"
            text: "Local specials"
            on_release:
                screen_manager.current = 'home_screen'
        NavigationDrawerIconButton:
            icon: "cogs"
            text: "Settings"
            on_release:
                screen_manager.current = 'settings_screen'
        NavigationDrawerIconButton:
            icon: "barley"
            text: "About"
            on_release:
                app.aboutPopUp()

    ScreenManager:
        id: screen_manager
        Screen:
            name: 'home_screen'
            MDLabel:
                text: 'Home Screen'
        Screen:
            name: 'settings_screen'
            MDLabel:
                text: 'Settings Screen'

